<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:padding="10dp">

    <EditText
        android:id="@+id/edt_note_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        android:hint="Note Title"/>

    <EditText
        android:id="@+id/edt_note_des"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/edt_note_title"
        android:hint="Note Description"/>

    <TextView
        android:id="@+id/tv_note_cancel"
        android:layout_width="140dp"
        android:layout_height="50dp"
        android:background="@android:color/holo_green_light"
        android:text="Cancel"
        android:gravity="center"
        android:textColor="@color/white"
        android:textSize="20dp"
        android:textStyle="bold"
        android:fontFamily="casual"
        app:layout_constraintTop_toBottomOf="@id/edt_note_des"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@id/tv_note_add"
        android:layout_margin="5dp"/>

    <TextView
        android:id="@+id/tv_note_add"
        android:layout_width="140dp"
        android:layout_height="50dp"
        android:background="@android:color/holo_blue_bright"
        android:text="Add Note"
        android:gravity="center"
        android:textColor="@color/white"
        android:textSize="20dp"
        android:textStyle="bold"
        android:fontFamily="casual"
        app:layout_constraintTop_toBottomOf="@id/edt_note_des"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/tv_note_cancel"
        android:layout_margin="5dp"/>

</androidx.constraintlayout.widget.ConstraintLayout>